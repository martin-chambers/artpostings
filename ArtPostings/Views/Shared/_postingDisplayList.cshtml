@model IEnumerable<ArtPostings.Models.ItemPostingViewModel>
    @foreach (ArtPostings.Models.ItemPostingViewModel posting in Model)
    {
    <tr>
        <td>
            <table class="posting">
                <tr>
                    <td class="picturecell">
                        <a class="picturelink" href=@posting.ItemPosting.FilePath rel="lightbox" title=@posting.ItemPosting.Title>
                            <img alt=@posting.ItemPosting.ShortName width="120px" title=@posting.ItemPosting.ShortName src=@posting.ItemPosting.FilePath />
                        </a>
                    </td>
                    <td class="itemtext">
                        <div class="itemheader">
                            <strong>@posting.ItemPosting.Header</strong>
                        </div>
                        <div class="itemdesc">@posting.ItemPosting.Description</div><br /><br />
                        <div class="itemfooter"> @posting.ItemPosting.Price | Size :@posting.ItemPosting.Size</div>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td>
            <hr />
        </td>
    </tr>
    }
