<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Ann Chambers Art</title>
    <meta property="og:title" content="Ann Chambers Art" />
    <meta property="og:image" content="http://annchambers.net/Content/art/aaa_thumb.JPG" />
    <meta property="og:site_name" content="Acylic and oil paintings by Ann Chambers" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/lightbox.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" media="screen" href="http://code.ionicframework.com/ionicons/1.5.2/css/ionicons.min.css" />
    <script src="@Url.Content("~/Scripts/jquery-1.11.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="../../Scripts/lightbox.min.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryajax")
    @Scripts.Render("~/bundles/bootstrap")    
</head>
<body>
    <div id="page">
        <div class="top">
            <ul class="toprightmenu">
                @Html.Partial("_LoginPartial")
            </ul>
            <ul class="topleftmenu">
                <li><a href='@Url.Action("Index", "About")'>About</a></li>
                <li><a href='@Url.Action("Index", "Links")'>Links</a></li>
                <li><a href='@Url.Action("Index", "Archive")' id="dropzone-archive" ondrop="drop_here({ event: event, archive: true, display: true })" ondragover="allow_drop_here(event)">Archive</a></li>
                <li><a href='@Url.Action("Index", "Viewing")'>Viewing</a></li>
                <li><a href='@Url.Action("Index", "Contact")'>Contact</a></li>
                <li><a href='@Url.Action("Index", "Home")' id="dropzone-home" ondrop="drop_here({ event: event, archive: false, display: true })" ondragover="allow_drop_here(event)">Home</a></li>
            </ul>
        </div>
        <div id="main">
            <h1>Ann Chambers Art</h1><br />
            <div id="inner">
                <div id="listpad">
                    @if (ViewBag.Mode == "_itemDisplay")
            { @Html.Partial("_itemDisplay")}
            </div>
            <div class="notepad">
                <section>
                    @RenderSection("scripts", required: false)
                    @RenderBody()
                </section>
            </div>
        </div>
    </div>
</div>
</body>
</html>