@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm_", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <li>
                @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })            
        </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm_').submit()">
                    Log out
                </a>
            </li>
            <li>
                  @Html.ActionLink("Admin",
                        "Index",
                        "Admin",
                        routeValues: null,
                        htmlAttributes: new {
                            id = "adminLink",
                            ondrop = "drop_here({ event: event, archive: false, display: false })",
                            ondragover = "allow_drop_here(event)"
                        })                
            </li>
    }
}
else
{
    <li><a>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</a></li>
    <li><a>@Html.ActionLink("Admin Log in",
          "Login",
          "Account",
          routeValues: null,
          htmlAttributes: new {
              id = "loginLink"})</a></li>
}

