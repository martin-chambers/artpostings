    @{
        var grid = new WebGrid(source: Model.PictureFileRecords, rowsPerPage: 6, defaultSort: "Order", canPage: true);        
    }
    @grid.GetHtml(
            tableStyle: "webgrid-table",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            rowStyle: "webgrid-row-style",
            columns: grid.Columns(
                grid.Column(header: "Image", format: @<text><img width='120' draggable="true" 
                          ondragstart="startdrag(event, '@item.JSFilePath')" ondragend="enddrag(event)" src=@item.FilePath /></text>, canSort: false),
                grid.Column(columnName: "Header", header: "Header", style: "wide-column", canSort: true),
                grid.Column(columnName: "FileName", header: "File", style: "wide-column", canSort: true),
                grid.Column(header: "Order", canSort: true,
                    format: @<text><img width='50' src="@Url.Content("~/Content/icons/promote.png")" class="icon-link" onclick="filepromote(event, '@item.JSFileName', '@item.Status')" alt="Promote" title="Promote" /></text>),
                grid.Column(header: "Delete", canSort: false,
                    format: @<text><img width='50' src="@Url.Content("~/Content/icons/trash-icon.png")" class="icon-link" onclick="filedelete(event, '@item.JSFileName', '@item.Status')" alt="Delete" title="Delete"/></text>)
            )
  )
